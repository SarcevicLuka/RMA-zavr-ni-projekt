<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_destination_details_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_destination_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_show_on_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_location_on_24"
        app:layout_constraintTop_toBottomOf="@id/tv_destination_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_destination_date"
        android:text="Show on map"
        />

    <TextView
        android:id="@+id/tv_destination_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_small"
        app:layout_constraintTop_toBottomOf="@id/b_show_on_map" />

    <TextView
        android:id="@+id/tv_destination_descritpion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_medium"
        app:layout_constraintHeight_percent="0.30"
        app:layout_constraintTop_toBottomOf="@id/tv_destination_date" />

    <ImageView
        android:id="@+id/iv_destination_details_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintHeight_percent="0.52"
        app:layout_constraintTop_toBottomOf="@id/tv_destination_descritpion" />
</androidx.constraintlayout.widget.ConstraintLayout>